{
  "name": "@asteroidejs/core",
  "version": "0.0.2-canary.2",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "directory": "packages/core"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf dist",
    "generate-types": "tsc --declaration --emitDeclarationOnly --declarationMap --outDir dist",
    "build": "npm run clean && ncc build src/index.ts -t -o dist --minify --no-cache --no-source-map-register && npm run generate-types",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --watch"
  },
  "devDependencies": {
    "@asteroidejs/common": "^0.0.2-canary.2",
    "@asteroidejs/config": "^0.0.2-canary.2"
  }
}
