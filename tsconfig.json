{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": false,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": false,
    "importHelpers": true,
    "allowJs": false,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
